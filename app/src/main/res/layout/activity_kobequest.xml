<?xml version="1.0" encoding="utf-8"?>
<!--
    Author: Kobe
    Layout for KobeQuest. Displays the phone statistics with a button to
    start the quest.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".KobeQuest">

    <TextView
        android:id="@+id/best_airtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="22dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <Button
        android:id="@+id/quest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toggleButton"
        android:text="@string/q1" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="90dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="147dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Throw:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:padding="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".KobeQuest">

            <TextView
                android:id="@+id/maxYeet"
                android:layout_width="90dp"
                android:layout_height="52dp"
                android:text="yeet:"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/airtime"
                android:layout_width="90dp"
                android:layout_height="52dp"
                android:text="a\n(airtime):"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/wN"
                android:layout_width="90dp"
                android:layout_height="52dp"
                android:text="twirl:"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/prox_last"
                android:layout_width="90dp"
                android:layout_height="51dp"
                android:text="landed:"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>