<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    android:minHeight="250dp"
    tools:actionBarNavMode="?android:attr/textColorAlertDialogListItem"
    tools:background="@color/common_google_signin_btn_text_dark_focused"
    tools:context=".HelpActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="11dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:fontFamily="@font/titillium_web_extralight"
        android:text="Instructions"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="320dp"
        android:layout_height="179dp"
        android:text='1. Once in "Throw Mode," use your phone to look around until it is able to identify planes.'
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="314dp"
        android:layout_height="68dp"
        android:text='2. Next, generate a target by clicking the "Generate Target" button.'
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="320dp"
        android:layout_height="69dp"
        android:text="3. Once a target appears, aim and throw!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:text='4. To view public high scores, select the "Leaderboard" button in the main menu.'
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="368dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="16dp"
        android:text="Contact the Kobe creators with any questions, comments, or concerns at kobe@kobe.com"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</android.support.constraint.ConstraintLayout>